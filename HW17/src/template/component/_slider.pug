mixin slider()
    div.slides
        each linkImg in ["/assets/slides/1.jpg", "/assets/slides/2.jpg", "/assets/slides/3.jpg", "/assets/slides/4.jpg", "/assets/slides/5.jpg"]
            div.slides-slide__cursor
                img(src= linkImg)
    div.button
        each linkButton, classButton in {"buttonLast button-buttonLast__padding":"/assets/button/buttonLast.png", "buttonNext button-buttonNext__padding":"/assets/button/buttonNext.png"}
            div(class= classButton type="button")
                img(src= linkButton)
